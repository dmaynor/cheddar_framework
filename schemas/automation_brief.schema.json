{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/dmaynor/cheddar_framework/schemas/automation_brief.schema.json",
  "title": "Automation Brief",
  "description": "Executable, testable contract binding human sign-off to automation",
  "type": "object",

  "properties": {
    "level": {
      "type": "string",
      "const": "automation_brief",
      "description": "Artifact type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^brief_[a-z0-9_]+_v[0-9]+$",
      "description": "Stable unique identifier",
      "examples": ["brief_prkin_v1"]
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Snake_case identifier"
    },
    "supports_upper_layer": {
      "type": "string",
      "pattern": "^track_[a-z0-9_]+_v[0-9]+$",
      "description": "ID of parent cheddar_track"
    },
    "owner": {
      "type": "string",
      "minLength": 1,
      "description": "Principal worker accountable for this automation"
    },
    "deliverables": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "description": "Concrete outputs this automation produces"
    },
    "tests": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string", "minLength": 1 },
          {
            "type": "object",
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "type": { "type": "string", "minLength": 1 },
              "target": { "type": "string", "minLength": 1 }
            },
            "required": ["name", "type", "target"]
          }
        ]
      },
      "minItems": 1,
      "description": "Validation criteria for the deliverables"
    },
    "change_management": {
      "type": "object",
      "properties": {
        "approvals_required": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string", "minLength": 1 },
              {
                "type": "object",
                "properties": {
                  "role": { "type": "string", "minLength": 1 }
                },
                "required": ["role"]
              }
            ]
          },
          "description": "Roles that must approve changes"
        },
        "rollback_plan": {
          "type": "string",
          "description": "How to revert if automation fails"
        }
      },
      "description": "Approval and rollback procedures"
    },
    "enables_lower_layer": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "description": "What this brief enables (bidirectional contract)"
    },
    "upward_feedback": {
      "type": "string",
      "description": "Conditions triggering escalation to upper layer"
    },
    "cheddar_state": {
      "type": "string",
      "enum": ["active", "resolved", "stinky"],
      "description": "Artifact lifecycle state"
    },
    "lineage": {
      "type": "object",
      "properties": {
        "upstream_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]",
          "description": "SHA-256 hash of parent cheddar_track"
        },
        "hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]",
          "description": "SHA-256 hash of this artifact's content"
        },
        "signed_by": {
          "type": "string",
          "description": "Role or identity that signed this artifact"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Signing timestamp"
        }
      },
      "required": ["upstream_hash", "hash", "timestamp"],
      "additionalProperties": false
    }
  },

  "required": [
    "level",
    "id",
    "title",
    "supports_upper_layer",
    "owner",
    "deliverables",
    "tests",
    "lineage"
  ],
  "additionalProperties": false
}
