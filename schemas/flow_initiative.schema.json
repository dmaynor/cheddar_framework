{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/dmaynor/cheddar_framework/schemas/flow_initiative.schema.json",
  "title": "Flow Initiative",
  "description": "Translates mission intent into departmental or system-level objectives",
  "type": "object",

  "properties": {
    "level": {
      "type": "string",
      "const": "flow_initiative",
      "description": "Artifact type identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^flow_[a-z0-9_]+_v[0-9]+$",
      "description": "Stable unique identifier",
      "examples": ["flow_automated_regression_v1"]
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Snake_case identifier"
    },
    "supports_upper_layer": {
      "type": "string",
      "pattern": "^mission_[a-z0-9_]+_v[0-9]+$",
      "description": "ID of parent mission_definition"
    },
    "objective": {
      "type": "string",
      "minLength": 1,
      "description": "Concrete goal statement"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Guardrails and limitations"
    },
    "telemetry_signals": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Metrics to track progress"
    },
    "enables_lower_layer": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "What this initiative makes possible"
    },
    "cheddar_state": {
      "type": "string",
      "enum": ["active", "resolved", "stinky"],
      "description": "Artifact lifecycle state"
    },
    "lineage": {
      "type": "object",
      "properties": {
        "upstream_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$",
          "description": "SHA-256 hash of parent mission_definition"
        },
        "hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$",
          "description": "SHA-256 hash of this artifact's content"
        },
        "signed_by": {
          "type": "string",
          "description": "Role or identity that signed this artifact"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Signing timestamp"
        }
      },
      "required": ["upstream_hash", "hash", "timestamp"],
      "additionalProperties": false
    }
  },

  "required": [
    "level",
    "id",
    "title",
    "supports_upper_layer",
    "objective",
    "lineage"
  ],
  "additionalProperties": false
}
